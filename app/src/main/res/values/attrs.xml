<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="KLTittleBar">
        <attr name="backIcon" format="reference" />
        <attr name="title" format="string|reference" />
        <attr name="titleColor" format="color" />
        <attr name="titleSize" format="dimension"/>
        <attr name="extLeftIcon" format="reference" />
        <attr name="extRightIcon" format="reference" />
        <attr name="ext" format="string|reference" />
        <attr name="leftText" format="string|reference" />
        <attr name="extColor" format="color" />
        <attr name="extSize" format="dimension"/>
        <attr name="hideLeft" format="boolean" />
        <attr name="backgroundx" format="color|reference" />
    </declare-styleable>
    <declare-styleable name="NumberProgressBar">
        <attr name="progress_current" format="integer"/>
        <attr name="progress_max" format="integer"/>
        <attr name="progress_unreached_color" format="color"/>
        <attr name="progress_reached_color" format="color"/>
        <attr name="progress_reached_bar_height" format="dimension"/>
        <attr name="progress_unreached_bar_height" format="dimension"/>
        <attr name="progress_text_size" format="dimension"/>
        <attr name="progress_text_color" format="color"/>
        <attr name="progress_text_offset" format="dimension"/>
        <attr name="progress_text_visibility" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
        </attr>
    </declare-styleable>
    <!--渐变半圆进度条-->
    <declare-styleable name="SemicircleRoundProgressBar">
        <attr name="ringColor" format="color" />
        <attr name="ringProgressColor" format="color" />
        <attr name="ringWidth" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="maxProgress" format="integer" />
        <attr name="currentProgress" format="integer" />
        <attr name="isGradient" format="boolean" />
        <attr name="startColor" format="color" />
        <attr name="endColor" format="color" />
        <attr name="maxAngle" format="integer" />
        <attr name="startAngle" format="integer" />

    </declare-styleable>

    <declare-styleable name="RockerTouchView">
        <attr name="all_direction_mode" format="boolean" /><!--方向模式,true 八方向-->
        <attr name="fixed_position" format="boolean" /><!--方向模式,true 八方向-->
        <attr name="roock_touch_mode" format="boolean" /><!--触摸模式,true边框箭头-->
        <attr name="out_circle_background" format="color|reference" /><!--外圆背景-->
        <attr name="rocker_point_background" format="color|reference" /><!--摇杆点图标-->
        <attr name="default_rocker_point_background" format="color|reference" /><!--未触摸默认中心原点图标-->
    </declare-styleable>

    <declare-styleable name="WaveView">
        <attr name="waveColor" format="color|reference" />
        <attr name="waveCount" format="integer" />
        <attr name="waveCenterIcon" format="reference" />
    </declare-styleable>
</resources>